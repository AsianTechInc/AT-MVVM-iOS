#!/bin/bash

set -e

IPA_NAME="$(ls ./build | grep ipa)"

if [[ -z "$IPA_NAME" ]]; then
    echo 'Invalid IPA'
    exit 1
fi

IPA_PATH="./build/$IPA_NAME"
TESTERS='ios,qc'
FABRIC_API_KEY='6295ab1bb43d157cb905e37959d9f536fdf1e5f2'
FABRIC_BUILD_SECRET='b84309a142876ff4d023bfa0e9505875aed2007eaa43f90f6b28a78d3d0da90d'

# Upload to Fabric
export PODS_ROOT='./Pods'
SUBMIT="$PODS_ROOT/Crashlytics/submit"
/bin/bash "$SUBMIT" \
    "$FABRIC_API_KEY" \
    "$FABRIC_BUILD_SECRET" \
    -ipaPath "$IPA_PATH" \
    -groupAliases "$TESTERS" \
    -notifications YES
